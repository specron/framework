{
  "name": "@specron/flattener",
  "version": "0.17.0",
  "description": "Solidity files flattener for Specron framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "test": "npx nyc npx ava --verbose"
  },
  "ava": {
    "concurrency": 1,
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "files": [
      "src/tests/*.test.ts",
      "src/tests/**/*.test.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@0xcert/ethereum-utils-contracts": "2.0.1",
    "@types/node": "13.13.4",
    "ava": "3.8.1",
    "nyc": "15.0.1",
    "ts-node": "8.10.1",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@hayspec/reporter": "0.10.0",
    "fast-glob": "3.2.2",
    "sol-merger": "2.0.1"
  }
}
