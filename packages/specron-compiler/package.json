{
  "name": "@specron/compiler",
  "version": "0.0.43",
  "description": "Solidity contract compiler for ChainSpin framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -Rf ./dist",
    "transpile": "npm run clean; tsc",
    "prepare": "npm run transpile",
    "test": "nyc ava"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "src/tests/*.test.ts",
      "src/tests/**/*.test.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@0xcert/ethereum-utils": "1.0.1",
    "@types/fs-extra": "5.0.3",
    "@types/node": "^10.3.2",
    "ava": "^1.0.0-beta.6",
    "nyc": "^12.0.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "@hayspec/reporter": "^0.4.21",
    "fast-glob": "^2.2.2",
    "fs-extra": "7.0.0",
    "solc": "^0.4.24"
  }
}
