{
  "name": "@specron/cli",
  "version": "0.7.0",
  "description": "Command-line tool for Specron framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "specron": "./bin/specron"
  },
  "scripts": {
    "build": "npx tsc",
    "test": "npx nyc npx ava --verbose"
  },
  "specron": {
    "compiler": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ],
      "severities": [
        "error",
        "warning"
      ]
    },
    "flattener": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ],
      "severities": [
        "error",
        "warning"
      ]
    },
    "sandbox": {
      "port": 8545
    },
    "test": {
      "server": true,
      "port": 8545,
      "match": [
        "./src/**/*.hay.*"
      ],
      "blockTime": null
    },
    "require": [
      "ts-node/register"
    ]
  },
  "ava": {
    "concurrency": 1,
    "compileEnhancements": false,
    "files": [
      "dist/tests/*.test.js",
      "dist/tests/**/*.test.js"
    ]
  },
  "nyc": {
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@types/inquirer": "0.0.43",
    "@types/node": "^11.9.5",
    "@types/yargs": "^12.0.9",
    "ava": "^1.2.1",
    "nyc": "^13.3.0",
    "solc": "^0.5.10",
    "ts-node": "^8.0.2",
    "typescript": "^3.2.4",
    "web3": "1.2.0"
  },
  "dependencies": {
    "@hayspec/reporter": "0.8.3",
    "@specron/compiler": "0.7.0",
    "@specron/flattener": "0.7.0",
    "@specron/init": "0.7.0",
    "@specron/sandbox": "0.7.0",
    "@specron/spec": "0.7.0",
    "inquirer": "6.2.2",
    "yargs": "13.2.1"
  },
  "peerDependencies": {
    "solc": "*",
    "web3": "*"
  }
}
