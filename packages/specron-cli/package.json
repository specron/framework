{
  "name": "@specron/cli",
  "version": "0.17.2",
  "description": "Command-line tool for Specron framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "specron": "./bin/specron"
  },
  "scripts": {
    "build": "npx tsc",
    "test": "npx nyc npx ava --verbose"
  },
  "specron": {
    "compiler": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ],
      "severities": [
        "error",
        "warning"
      ]
    },
    "flattener": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ],
      "severities": [
        "error",
        "warning"
      ]
    },
    "sandbox": {
      "port": 8545
    },
    "test": {
      "server": true,
      "port": 8545,
      "match": [
        "./src/**/*.hay.*"
      ],
      "blockTime": null
    },
    "require": [
      "ts-node/register"
    ]
  },
  "ava": {
    "concurrency": 1,
    "files": [
      "dist/tests/*.test.js",
      "dist/tests/**/*.test.js"
    ],
    "timeout": "1m"
  },
  "nyc": {
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@types/inquirer": "6.5.0",
    "@types/node": "14.14.20",
    "@types/yargs": "15.0.12",
    "ava": "3.15.0",
    "nyc": "15.1.0",
    "solc": "0.6.1",
    "ts-node": "9.1.1",
    "typescript": "4.1.3",
    "web3": "1.3.1"
  },
  "dependencies": {
    "@hayspec/reporter": "0.10.0",
    "@specron/compiler": "0.17.2",
    "@specron/flattener": "0.17.2",
    "@specron/init": "0.17.2",
    "@specron/sandbox": "0.17.2",
    "@specron/spec": "0.17.2",
    "inquirer": "7.3.3",
    "yargs": "16.2.0"
  },
  "peerDependencies": {
    "solc": "*",
    "web3": "*"
  }
}
