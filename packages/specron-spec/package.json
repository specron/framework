{
  "name": "@specron/spec",
  "version": "0.7.0",
  "description": "Test suits for Specron framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "test": "npx nyc npx ava --verbose"
  },
  "ava": {
    "concurrency": 1,
    "compileEnhancements": false,
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "files": [
      "src/tests/*.test.ts",
      "src/tests/**/*.test.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@0xcert/ethereum-utils": "1.1.0",
    "@types/node": "^11.9.5",
    "ava": "^1.2.1",
    "nyc": "^13.3.0",
    "ts-node": "^8.0.2",
    "typescript": "^3.2.4",
    "web3": "1.2.0"
  },
  "peerDependencies": {
    "web3": "*"
  },
  "dependencies": {
    "@hayspec/reporter": "0.8.3",
    "@hayspec/runner": "0.8.3",
    "@hayspec/spec": "0.8.3",
    "@specron/sandbox": "0.7.0"
  }
}
