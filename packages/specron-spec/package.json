{
  "name": "@specron/spec",
  "version": "0.0.1",
  "description": "Test suits for ChainSpin framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -Rf ./dist",
    "transpile": "npm run clean; tsc",
    "lint": "tslint 'src/**/*.ts?(x)'",
    "prepublishOnly": "npm run transpile",
    "test": "ava --verbose"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "src/tests/*.test.ts",
      "src/tests/**/*.test.ts"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@specron/sandbox": "^0.0.1",
    "@types/node": "^10.3.2",
    "ava": "^1.0.0-beta.6",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1"
  },
  "peerDependencies": {
    "web3": "*"
  },
  "dependencies": {
    "@hayspec/core": "^0.2.6",
    "@hayspec/reporter": "^0.2.6",
    "@hayspec/runner": "^0.2.6",
    "web3": "1.0.0-beta.34"
  }
}
