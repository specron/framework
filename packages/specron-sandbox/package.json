{
  "name": "@specron/sandbox",
  "version": "0.17.3",
  "description": "Ethereum sandbox server for Specron framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "test": "npx nyc npx ava --verbose"
  },
  "ava": {
    "concurrency": 1,
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "files": [
      "src/tests/*.test.ts",
      "src/tests/**/*.test.ts"
    ],
    "timeout": "1m"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "16.4.11",
    "@types/supertest": "2.0.11",
    "ava": "3.15.0",
    "nyc": "15.1.0",
    "supertest": "6.1.4",
    "ts-node": "10.1.0",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "ganache-cli": "6.12.2"
  }
}
