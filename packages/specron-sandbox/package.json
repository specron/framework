{
  "name": "@specron/sandbox",
  "version": "0.6.0",
  "description": "Ethereum sandbox server for Specron framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "test": "npx nyc npx ava --verbose"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "src/tests/*.test.ts",
      "src/tests/**/*.test.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^11.9.5",
    "@types/supertest": "^2.0.7",
    "ava": "^1.2.1",
    "nyc": "^13.3.0",
    "supertest": "^3.4.2",
    "ts-node": "^8.0.2",
    "typescript": "^3.2.4"
  },
  "dependencies": {
    "ganache-cli": "6.5.0"
  }
}
